<% layout("/layouts/boilerplate") %>

<body>

    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-lg-8">
          <!-- Dashboard Heading -->
          <div class="section_heading text-center wow fadeInUp" data-wow-delay="0.2s">
            <h3>Welcome, <span><%= username %></span></h3>
            <p>Manage your profile and view analytics to optimize your influence.</p>
            <div class="line"></div>
          </div>
        </div>
      </div>
  
      <!-- Profile Section -->
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body text-center">
              <img src="/profilePic/<%= profilePic %>" class="rounded-circle mb-3" alt="Profile Picture" width="150" height="150">
              <h5 class="card-title"><%= username %></h5>
              
             
              <a href="/user/profile" class="btn btn-primary action-btn">Update Profile</a>
            </div>
          </div>
        </div>
  
        <!-- Analytics Section -->
        <div class="col-md-6">
          <div class="card">
            <div class="card-body text-center">
              <h5 class="card-title">Analytics</h5>
              <p>Check your social media analytics and engagement metrics.</p>
              <a href="/user/auth" class="btn btn-info action-btn">View Analytics</a>
              <a href="/performance" class="btn btn-success action-btn">Performance Stats</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  
  </body>
  