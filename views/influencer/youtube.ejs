<% layout("/layouts/boilerplate") %>


<body class="c-flex  vh-100">
    <header><div class="container text-center">
      <h1 class="mb-4">Your YouTube Channel Info</h1>
      
      <div class="card mx-auto" style="width: 18rem;">
        <img src="<%= channel.thumbnail %>" class="card-img-top" alt="Channel Thumbnail">
        <div class="card-body">
          <h5 class="card-title"><%= channel.title %></h5>
          <p class="card-text">Channel ID: <strong><%= channel.id %></strong></p>
          <p class="card-text"><%= channel.description %></p>
          <p class="card-text">views : <%= channel.views %></p>
          <p class="card-text">Subscribers : <%= channel.subscribers %></p>
        </div>
      </div>
    </div>
  </header>
  <main>
    <h2>Most Popular Video</h2>
    <div class="col-md-4 mb-4">
        <div class="card">
          <img src="<%= mostPopularContent.thumbnail %>" class="card-img-top" alt="Video Thumbnail">
          <div class="card-body">
            <h5 class="card-title"><%= mostPopularContent.title %></h5>
            <p class="card-text">Views: <%= mostPopularContent.views %></p>
            <p class="card-text">Likes: <%= mostPopularContent.likes %></p>
            <p class="card-text">Comments: <%= mostPopularContent.comments %></p>
            <p class="card-text">EngagementRate: <%= mostPopularContent.engagementRate %></p>
            <p class="card-text"><%= mostPopularContent.description %></p>
          
          </div>
        </div>
      </div>

    <div class="container mt-4">
      <h1 class="text-center mb-4">Your YouTube Videos</h1>
  
      <% if(videosList.length>0) { %>
        <div class="row">
        <% videosList.forEach(function(video) { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <img src="<%= video.thumbnail %>" class="card-img-top" alt="Video Thumbnail">
              <div class="card-body">
                <h5 class="card-title"><%= video.title %></h5>
                <p class="card-text">Views: <%= video.views %></p>
                <p class="card-text">Likes: <%= video.likes %></p>
                <p class="card-text">Comments: <%= video.comments %></p>
                <p class="card-text">EngagementRate: <%= video.engagementRate %></p>
                <p class="card-text"><%= video.description %></p>
              
              </div>
            </div>
          </div>
        <% }); %>
      </div> <% }else{ %>
        <h2>NO VIDEOS POSTED ON THIS CHANNEL!!</h2>
      <% } %>
  
    </div>
  