<% layout("/layouts/boilerplate") %>
<body>

    <div class="container">
      <h2 class="mt-5">Edit Profile</h2>
  
      <!-- Check if profile is complete -->
      <% if (profileComplete) { %>
        <div class="card mt-3">
          <div class="card-body">
            <h5 class="card-title">Your Profile</h5>
            <img src="/images/<%= user.profilePic %>" alt="Profile Picture" class="rounded-circle mb-3" width="150" height="150">
            <p><strong>Username:</strong> <%= user.username %></p>
            <p><strong>Email:</strong> <%= user.email %></p>
            <p><strong>Bio:</strong> <%= user.bio %></p>
            <p><strong>Instagram:</strong> <%= user.socialMedia.instagram %></p>
            <p><strong>Facebook:</strong> <%= user.socialMedia.facebook %></p>
            <p><strong>YouTube:</strong> <%= user.socialMedia.youtube %></p>
          </div>
        </div>
      <% } else { %>
        <p class="alert alert-warning mt-3">Your profile is incomplete. Please fill in the details below.</p>
      <% } %>
  
      <!-- Profile Update Form -->
      <form action="/user/profile" method="POST" class="mt-3"  enctype="multipart/form-data">
        <div class="form-group">
          <label for="bio">Bio</label>
          <textarea name="bio" id="bio" class="form-control" rows="3"><%= user.bio || '' %></textarea>
        </div>
  
        <div class="form-group">
          <label for="profilePic">Profile Picture</label>
          <input type="file" name="profilePic" id="profilePic" class="form-control">
        </div>
        <div class="form-group">
          <label for="instagram">Instagram Handle</label>
          <input type="text" name="instagram" id="instagram" class="form-control" value="<%= user.socialMedia.instagram || '' %>">
        </div>
  
        <div class="form-group">
          <label for="facebook">Facebook Handle</label>
          <input type="text" name="facebook" id="facebook" class="form-control" value="<%= user.socialMedia.facebook || '' %>">
        </div>
  
        <div class="form-group">
          <label for="youtube">YouTube Channel URL</label>
          <input type="text" name="youtube" id="youtube" class="form-control" value="<%= user.socialMedia.youtube || '' %>">
        </div>
  
        <button type="submit" class="btn btn-primary">Update Profile</button>
      </form>
    </div>
  
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  </body>