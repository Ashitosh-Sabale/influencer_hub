<% layout("/layouts/boilerplate") %>
<header>
<style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }
    .container {
      width: 90%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }
    h1 {
      text-align: center;
      margin-bottom: 20px;
    }
    .card {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      margin: 15px;
      padding: 20px;
      display: flex;
      align-items: center;
      transition: transform 0.2s;
    }
    .card:hover {
      transform: translateY(-5px);
    }
    .profile-picture {
      border-radius: 50%;
      width: 80px;
      height: 80px;
      margin-right: 20px;
    }
    .info {
      flex: 1;
    }
    .info h3 {
      margin: 0;
      color: #333;
    }
    .info p {
      margin: 5px 0;
      color: #777;
    }
    .social-links a {
      margin-right: 10px;
      color: #1a73e8;
      text-decoration: none;
    }
    .social-links a:hover {
      text-decoration: underline;
    }
  </style>
  </header>
 
 <body>
    <div class="container">
      <h1>Influencer Profiles</h1>
      <% Influencers.forEach(influencer => { %>
        <div class="card">
          <img src="/images/<%= influencer.profilePic %>" alt="<%= influencer.username %>'s Profile Picture" class="profile-picture">
          <div class="info">
            <h3><%= influencer.username %></h3>
            <p><%= influencer.bio %></p>
            <div class="social-links">
              <a href="https://instagram.com/<%= influencer.socialMedia.instagram %>" target="_blank"><i class="fab fa-instagram"></i> Instagram</a>
              <a href="https://youtube.com/<%= influencer.socialMedia.youtube %>" target="_blank"><i class="fab fa-youtube"></i> YouTube</a>
              <a href="https://facebook.com/<%= influencer.socialMedia.facebook %>" target="_blank"><i class="fab fa-facebook"></i> Facebook</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
</body>